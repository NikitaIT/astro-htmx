---
function getFlashedMessages(): string[] {
  const flash = Astro.cookies.get("flash")?.json(); // get the data as json
  // if (flash) {
  //   Astro.cookies.delete("flash"); // delete the cookie after reading it
  // }
  return flash ?? [];
}
---

<!doctype html>
<html lang="">
  <head>
    <title>Contact App</title>
    <link
      rel="stylesheet"
      href="https://the.missing.style/v0.2.0/missing.min.css"
    />
    <link rel="stylesheet" href="/site.css" />
    <script is:inline src="/js/htmx-1.8.0.js"></script>
    <script is:inline src="/js/_hyperscript-0.9.7.js"></script>
    <script is:inline src="/js/rsjs-menu.js" type="module"></script>
    <script defer src="https://unpkg.com/alpinejs@3/dist/cdn.min.js"></script>
  </head>
  <body hx-boost="true">
    <main>
      <header>
        <h1>
          <all-caps>contacts.app</all-caps>
          <sub-title>A Demo Contacts Application</sub-title>
        </h1>
      </header>
      {
        getFlashedMessages().map((message) => (
          <div class="flash">{message}</div>
        ))
      }
      <slot />
    </main>
  </body>
</html>
